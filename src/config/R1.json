{
  "device": "Mako R1",
  "schemaVersion": 1,
  "midi": {
    "channel": 1,
    "pc": {
      "range": [0, 127],
      "banks": [
        { "bank": "A", "presets": { "red": 0, "green": 1, "blue": 2 } },
        { "bank": "B", "presets": { "red": 3, "green": 4, "blue": 5 } },
        { "bank": "C", "presets": { "red": 6, "green": 7, "blue": 8 } }
      ]
    }
  },
  "controls": [
    { "id": "decay",  "label": "Decay",  "cc": 3,  "type": "range",   "min": 0, "max": 127 },
    { "id": "swell",  "label": "Swell",  "cc": 14, "type": "range",   "min": 0, "max": 127 },
    { "id": "mix",    "label": "Mix",    "cc": 15, "type": "range",   "min": 0, "max": 127 },
    { "id": "rate",   "label": "Rate",   "cc": 20, "type": "range",   "min": 0, "max": 127 },
    { "id": "depth",  "label": "Depth",  "cc": 21, "type": "range",   "min": 0, "max": 127 },
    { "id": "preDelay", "label": "Pre Delay", "cc": 22, "type": "range", "min": 0, "max": 127 },

    {
      "id": "program",
      "label": "Program",
      "cc": 23,
      "type": "enum",
      "map": {
        "spring": 1,
        "hall": 2,
        "plate": 3,
        "bfr": 4,
        "rfrct": 5,
        "air": 6
      }
    },

    { "id": "lo",    "label": "Lo",    "cc": 24, "type": "range", "min": 0, "max": 127 },
    { "id": "high",  "label": "High",  "cc": 25, "type": "range", "min": 0, "max": 127 },
    { "id": "x",     "label": "X",     "cc": 26, "type": "range", "min": 0, "max": 127 },

    {
      "id": "tweakSwitch",
      "label": "Tweak Switch",
      "cc": 27,
      "type": "zoneEnum",
      "zones": [
        { "name": "Rate",       "min": 0,  "max": 42 },
        { "name": "Depth",      "min": 43, "max": 85 },
        { "name": "Pre Delay",  "min": 86, "max": 127 }
      ],
      "hidden": true
    },

    {
      "id": "bankSwitch",
      "label": "A|B|C Bank",
      "cc": 28,
      "type": "zoneEnum",
      "zones": [
        { "name": "A", "min": 0,  "max": 42 },
        { "name": "B", "min": 43, "max": 85 },
        { "name": "C", "min": 86, "max": 127 }
      ],
      "hidden": true
    },

    {
      "id": "tuneSwitch",
      "label": "Tune Switch",
      "cc": 29,
      "type": "zoneEnum",
      "zones": [
        { "name": "Left",   "min": 0,  "max": 42 },
        { "name": "Middle", "min": 43, "max": 85 },
        { "name": "Right",  "min": 86, "max": 127 }
      ],
      "hidden": true
    },

    { "id": "bypass",        "label": "Bypass",      "cc": 30, "type": "toggle", "off": 0, "on": 127 },
    { "id": "sustainLatch",  "label": "Sus/Latch",   "cc": 31, "type": "toggle", "off": 0, "on": 127 }
  ],
  "notes": [
    "Stereo width n'est pas exposé en CC. Réglage matériel via Tune=X + maintien Bypass, puis tourner X.",
    "Les 128 presets sont rappelables par PC 0-127."
  ]
}
